{% extends '/extends/shopBase.html.twig' %}

{% block title %}
	{{ page_title }}
{% endblock %}

{% block content %}
	<h1 class="text-center">{{ page_title }}</h1>

    <form method="post" action="{{ path('client_login') }}" >
        <div class="form-group">
            <input type="text" placeholder="Adresse email" class="form-control" name="_username" required />
        </div>

        <div class="form-group">
            <input type="password" placeholder="Mot de passe" class="form-control" name="_password" required />
        </div>

        <div class="form-group">
            <button type="submit" class="btn btn-success">Connexion</button>
        </div>
    </form>
{% endblock %}
