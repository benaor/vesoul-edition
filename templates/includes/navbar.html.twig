{# -------------------- Barre de navigation ------------------- #}
<header class="sticky-top">
	<nav class="row py-3 m-0">
	
        <div class="col-12 col-md-3 d-flex align-items-center justify-content-center py-2">
			<a class="brand" href="{{ path('shop-home') }}">
                Vesoul Edition<span class="pl-1">.</span>
			</a>
		</div>

		{# ======== Recherche ========#}
		<form class="form-inline col-12 col-md-6 d-flex justify-content-center form-search py-2">
			<input class="form-control search-bar text-center m-0" id="searchBar" type="search" placeholder="Rechercher votre livre !" aria-label="Search">
			<button class="btn btn-search btn-info m-0" type="button">
				<i class="fas fa-search"></i>
			</button>
			
            <div class="form-control" id="searchBarResult"></div>
		</form>
        

		{# ======== Connexion ========#}
		<div class="col-12 col-md-3 d-flex align-items-center justify-content-center py-2">
			<div class="align-items-center justify-content-end d-none d-md-flex">
            

				{% if not app.user %}
					<a class="m-0 pr-3" href="{{ path('client_login') }}">Connexion</a>
				{% else %}
            
                <li class="nav-item dropdown" style="list-style: none !important;">
                    <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        Mon espace
                    </a>

                    <div class="dropdown-menu" aria-labelledby="navbarDropdown">

                    <a class="dropdown-item" href="{{path('client_infos')}}" class="">Mon compte</a>

                    {% if is_granted('ROLE_ADMIN') %}
                    <a class="dropdown-item nav-link" href="{{path('dashboard_admin')}}">Administration</a>
                    {% endif %}

                    <div class="dropdown-divider"></div>
                        <a class="dropdown-item" href="{{ path('client_logout') }}">Deconnexion<a>

                    </div>
                </li>
				{% endif %}
					

		        {# ======== Panier ========#}
                <div class="align-items-center justify-content-center px-3 d-none d-sm-none d-md-flex">
                    <a href="{{ path('cart') }}" class="d-flex flex-column justify-content-center">
                        <div>
                            <i class="fas fa-shopping-cart"></i>
                            <span id="nb-items" class="badge badge-pill badge-warning">
                                {{ app.session.get('panier') | length}}
                            </span>
                        </div>
                        <p class="m-0">panier</p>
                    </a>
                </div>
            </div>

            {# menu burger #}
            <div class="align-items-center justify-content-end d-flex d-md-none"> 
                <i class="fas fa-lg fa-hamburger" id="openBurger"></i>
            </div>

        </div>
	</nav>




    {# ----------------- Bandeau d'informations ------------------ #}
    <div class="banner py-2 d-none d-sm-none d-md-block d-lg-block">
        <div class="container">
            <div class="row">
                {# ======== Livraison ========#}
                <div class="col-4 d-flex justify-content-center align-items-center">
                    <i class="fas fa-truck m-3 d-md-none d-lg-block"></i>
                    <div class="d-flex flex-column">
                        <h3 class="m-0">Livraison gratuite</h3>
                        <p class="m-0">Partout en Franche-Comté</p>
                    </div>
                </div>

                {# ======== Contacts ========#}
                <div class="col-4 d-flex  justify-content-center align-items-center">
                    <i class="fas fa-phone m-3 d-md-none d-lg-block"></i>
                    <div class="d-flex flex-column">
                        <h3 class="m-0">contactez moi</h3>
                        <p class="m-0">06 99 65 86 00</p>
                    </div>
                </div>

                {# ======== Paiement ========#}
                <div class="col-4 d-flex justify-content-end align-items-center">
                    <i class="fas fa-money-check-alt m-3 d-md-none d-lg-block"></i>
                    <div class="d-flex flex-column">
                        <h3 class="m-0">paiement par cheque</h3>
                        <p class="m-0">Commande expédié
                            <span>dès réception</span>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</header>

